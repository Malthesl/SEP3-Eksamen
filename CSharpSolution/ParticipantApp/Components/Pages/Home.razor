@page "/"
@using ParticipantApp.Services
@inject NavigationManager Nav;
@inject IPlayerService PlayerService;


@code {

    protected async override Task OnInitializedAsync()
    {
        if (await PlayerService.GetGameIdAsync() is null)
        {
            Nav.NavigateTo("play");
        }
        else
        {
            Nav.NavigateTo("game");
        }
    }

}